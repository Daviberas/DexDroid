<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/nombreMovimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/efectoMovimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_below="@id/nombreMovimiento"/>

                <TextView
                    android:id="@+id/tipoMov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipoMov"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_below="@id/efectoMovimiento"/>
                <TextView
                    android:id="@+id/txtTipoMovimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/tipoMov"
                    android:layout_below="@id/efectoMovimiento"/>
                <TextView
                    android:id="@+id/txtVia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/txtTipoMovimiento"
                    android:layout_below="@id/efectoMovimiento"/>

                <TextView
                    android:id="@+id/txtPotencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/potenciaMov"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_below="@id/txtVia"/>
                <TextView
                    android:id="@+id/potencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/txtPotencia"
                    android:layout_below="@id/txtVia"/>
                <TextView
                    android:id="@+id/txtpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ppmov"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_below="@id/potencia"/>
                <TextView
                    android:id="@+id/pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/txtpp"
                    android:layout_below="@id/potencia"/>
                <TextView
                    android:id="@+id/txtPrecision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/precisionMov"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_below="@id/pp"/>
                <TextView
                    android:id="@+id/porcentajeAcierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/txtPrecision"
                    android:layout_below="@id/pp"/>

                <TextView
                    android:id="@+id/txtObjetivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/objetivoMov"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_below="@id/porcentajeAcierto"/>
                <TextView
                    android:id="@+id/objetivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/txtObjetivo"
                    android:layout_below="@id/porcentajeAcierto"/>
                <TextView
                    android:id="@+id/txtContacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contactoMov"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_below="@id/objetivo"/>
                <TextView
                    android:id="@+id/contacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/txtContacto"
                    android:layout_below="@id/objetivo"/>
                <TextView
                    android:id="@+id/txtMovPokes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pokemonMov"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_below="@id/contacto"/>

                <GridView
                    android:id="@+id/gridPokemonMovimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:layout_below="@id/txtMovPokes"/>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>